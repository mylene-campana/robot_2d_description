<?xml version="1.0"?>
<robot name="object">
  <link name="base_link"/> <!-- required name, fake link -->
  
  <joint name="j_translation_x" type="prismatic">
    <parent link="base_link"/>
    <child link="l_one"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-5" upper="5" effort="1.0" velocity="1.0"/>
  </joint>
  
  <link name="l_one"/> <!-- fake link -->
  
  <joint name="j_translation_y" type="prismatic">
    <parent link="l_one"/>
    <child link="true_base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-5" upper="5" effort="1.0" velocity="1.0"/>
  </joint>
  
  <link name="true_base_link"> <!-- real robot -->
    <inertial>
      <origin xyz="0 0 0" /> 
      <mass value="1.0" />
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.4" radius="0.01"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>   
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.4" radius="0.01"/>
      </geometry>
    </collision>
  </link>
</robot>
